{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "types": ["node", "express"] // Ensure Express types are included
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
